    "jest-cli": "^26.6.3",
    "lodash": "^4.17.15",
    "lodash-es": "^4.17.20",
    "mobx": "^5.9.0",
    "react": "^16.8.5",
    "rollup": "^2.39.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "=26.5.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5",
    "uglify-es": "^3.3.10"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
