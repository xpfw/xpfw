{
  "name": "@xpfw/form-web",
  "version": "1.0.0-beta.4",
  "main": "dist",
  "typings": "dist",
  "license": "MIT",
  "peerDependencies": {
    "lodash-es": "^4.x.x",
    "moment": "2.x.x",
    "react": "^16.x.x",
    "@xpfw/form": "1.x.x"
  },
  "scripts": {
    "build": "./node_modules/.bin/rollup -c",
    "dev": "./node_modules/.bin/rollup -c -w",
    "test": "./node_modules/.bin/jest --ci",
    "storybook": "./node_modules/.bin/start-storybook -p 9001 -c .storybook",
    "update": "ncu -a",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^24.0.3",
    "@types/lodash": "^4.14.120",
    "@types/lodash-es": "^4.14.118",
    "@types/mockdate": "^2.0.0",
    "@types/node": "^11.9.3",
    "@types/react": "^16.8.2",
    "@xpfw/form-tests": "0.1.1",
    "@xpfw/form": "1.0.0-beta.4",
    "awesome-typescript-loader": "^5.2.1",
    "jest": "^24.1.0",
    "jest-cli": "^24.1.0",
    "lodash": "^4.17.11",
    "mockdate": "^2.0.2",
    "moment": "^2.24.0",
    "preact": "^8.4.2",
    "preact-compat": "^3.18.4",
    "preact-render-to-json": "^3.6.6",
    "resub": "^1.0.13",
    "resub-persist": "^1.2.8",
    "rollup": "^1.1.2",
    "rollup-plugin-typescript2": "^0.19.2",
    "rollup-plugin-uglify": "^6.0.2",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.3",
    "uglify-es": "^3.3.10"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib",
      "<rootDir>/dist"
    ],
    "moduleNameMapper": {
      "\\.(css|sass|scss)$": "<rootDir>/__mocks__/styleMock.ts",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.ts",
      "^@xpfw/form-tests$": "<rootDir>/node_modules/@xpfw/form-tests",
      "^@xpfw/form$": "<rootDir>/node_modules/@xpfw/form",
      "^preact-render-to-json$": "preact-render-to-json",
      "^preact$": "<rootDir>/node_modules/preact",
      "^react$": "<rootDir>/node_modules/preact-compat",
      "^react-dom$": "<rootDir>/node_modules/preact-compat",
      "^lodash-es$": "<rootDir>/node_modules/lodash/index.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testURL": "http://localhost/"
  }
}
