{
  "name": "@xpfw/ui-nedb",
  "version": "0.1.1",
  "main": "dist",
  "typings": "dist",
  "license": "MIT",
  "dependencies": {
    "nedb": "^1.8.0"
  },
  "peerDependencies": {
    "lodash": "4.x.x",
    "@xpfw/validate": "0.1.x"
  },
  "scripts": {
    "build": "./node_modules/.bin/rollup -c",
    "dev": "./node_modules/.bin/rollup -c -w",
    "test": "./node_modules/.bin/jest --ci",
    "update": "ncu -a",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@types/jest": "^24.0.11",
    "@types/nedb": "^1.8.7",
    "@types/lodash": "^4.14.123",
    "@types/mockdate": "^2.0.0",
    "@xpfw/test-util": "1.0.0-beta.12",
    "@xpfw/ui-tests": "0.1.1",
    "@xpfw/validate": "^0.1.2",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^24.5.0",
    "jest-cli": "^24.5.0",
    "lodash": "^4.17.11",
    "mockdate": "^2.0.2",
    "rollup": "^1.7.3",
    "rollup-plugin-typescript2": "^0.20.1",
    "rollup-plugin-uglify": "^6.0.2",
    "ts-jest": "=24.0.0",
    "typescript": "^3.3.4000",
    "uglify-es": "^3.3.10"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib",
      "<rootDir>/dist"
    ],
    "moduleNameMapper": {
      "@xpfw/validate": "<rootDir>/node_modules/@xpfw/validate",
      "@xpfw/form-shared": "<rootDir>/node_modules/@xpfw/form-shared",
      "@xpfw/ui-shared": "<rootDir>/node_modules/@xpfw/ui-shared"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testURL": "http://localhost/"
  }
}
