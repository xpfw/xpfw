{
  "name": "@xpfw/dm-shared",
  "version": "1.0.0",
  "main": "dist",
  "license": "MIT",
  "scripts": {
    "build": "./node_modules/.bin/rollup -c",
    "dev": "./node_modules/.bin/rollup -c -w",
    "test": "./node_modules/.bin/jest --ci",
    "update": "ncu -a",
    "prepare": "npm run build"
  },
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "peerDependencies": {
    "@xpfw/data": "1.x.x",
    "@xpfw/dm": "1.x.x",
    "@xpfw/form": "1.x.x",
    "lodash": "4.x.x",
    "mobx": "^6.x.x",
    "mobx-react": "^7.x.x",
    "moment": "2.x.x"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/mockdate": "^2.0.0",
    "@types/react": "^17.0.2",
    "@xpfw/data": "1.0.0",
    "@xpfw/data-feathers": "1.0.0",
    "@xpfw/data-tests": "1.0.0",
    "@xpfw/dm": "1.0.0",
    "@xpfw/form": "1.0.0",
    "@xpfw/test-util": "1.0.0",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "lodash": "^4.17.11",
    "mockdate": "^3.0.2",
    "moment": "^2.24.0",
    "react": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rollup": "^2.39.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "=26.5.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5",
    "uglify-es": "^3.3.10",
    "mobx": "^5.9.4"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib",
      "<rootDir>/dist"
    ],
    "moduleNameMapper": {
      "^@xpfw/data-tests$": "<rootDir>/node_modules/@xpfw/data-tests",
      "^@xpfw/data$": "<rootDir>/node_modules/@xpfw/data",
      "^@xpfw/form$": "<rootDir>/node_modules/@xpfw/form",
      "^@xpfw/dm$": "<rootDir>/node_modules/@xpfw/dm",
      "^react$": "<rootDir>/node_modules/react"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testURL": "http://localhost/"
  }
}
