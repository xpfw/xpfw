{
  "name": "@xpfw/form-shared",
  "version": "0.1.4",
  "main": "dist",
  "typings": "dist",
  "license": "MIT",
  "peerDependencies": {
    "lodash": "4.x.x",
    "moment": "2.x.x",
    "resub": "1.x.x",
    "resub-persist": "1.x.x",
    "@xpfw/validate": "0.1.x"
  },
  "scripts": {
    "build": "./node_modules/.bin/rollup -c",
    "dev": "./node_modules/.bin/rollup -c -w",
    "test": "./node_modules/.bin/jest --ci",
    "update": "ncu -a",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/mockdate": "^2.0.0",
    "@types/react": "^16.8.8",
    "@xpfw/validate": "0.1.2",
    "jest": "^24.5.0",
    "jest-cli": "^24.5.0",
    "lodash": "^4.17.11",
    "mockdate": "^2.0.2",
    "moment": "^2.24.0",
    "preact": "^8.4.2",
    "preact-compat": "^3.18.4",
    "preact-render-to-json": "^3.6.6",
    "quick_check": "^0.7.0",
    "resub": "^1.0.13",
    "resub-persist": "^1.2.8",
    "rollup": "^1.7.3",
    "rollup-plugin-typescript2": "^0.20.1",
    "rollup-plugin-uglify": "^6.0.2",
    "ts-jest": "=24.0.0",
    "tslib": "^1.9.3",
    "typescript": "^3.3.4000",
    "uglify-es": "^3.3.10"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib",
      "<rootDir>/dist"
    ],
    "moduleNameMapper": {
      "preact-render-to-json": "preact-render-to-json",
      "preact": "preact",
      "react": "preact-compat",
      "react-dom": "preact-compat"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testURL": "http://localhost/"
  }
}
